<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LabdooApp01.Views.StartPage"
             BackgroundColor="#004586"
             Title="Labdoo">

    <StackLayout VerticalOptions="Center"  Spacing="20">
        <StackLayout.Padding>
            <!--On iOS there is a top bar -> 40 instead of 20 -->
            <OnPlatform x:TypeArguments="Thickness"   
        iOS="20,40,20,20" 
        Android="20,20,20,20"
        WinPhone="20,20,20,20"/>
        </StackLayout.Padding>
        <Label 
			Text="Welcome to Labdoo"
			TextColor="#ff6309"
			FontSize="30" 
			FontAttributes="Bold"  
			HorizontalOptions="Center" />
        <Label 
			Text="Bridge the digital divde" 
			TextColor="White"
			FontSize="18" 
			HorizontalOptions="Center" />
      
        <Button 
			Text="Donate a laptop" 
			TextColor="White"
			BackgroundColor="#579d1c" />
        <Button 
			Text="Transport a laptop" 
			TextColor="White"
			BackgroundColor="#579d1c" 
            Clicked="AddDootrip_Clicked"/>
    </StackLayout>
</ContentPage>

